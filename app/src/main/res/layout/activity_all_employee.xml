<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenportal.users.AllEmployeeActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_employee_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#173F7D"
        android:paddingBottom="7dp"
        android:id="@+id/boottomLayt"
        >

        <TextView
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="Your position will shared to above checked employees"
            android:id="@+id/textView"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="0.46" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/buttonOk"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>
