<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="0dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:gravity="top"
    android:layout_height="match_parent">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rootLinear"
        android:layout_marginTop="0dp"
        android:background="#D6D4D4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:textColor="#303030"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:text="SL#"/>

        <View
            android:background="#F2F0F0"
            android:layout_width="0dp"
            android:layout_weight="0.02"
            android:layout_height="30dp"></View>

        <TextView
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp"
            android:textSize="12dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:fontFamily="sans-serif"

            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="9dp"
            android:layout_height="wrap_content"
            android:text="EMPLOYEE NAME"/>

        <View
            android:background="#F2F0F0"
            android:layout_width="0dp"
            android:layout_weight="0.02"
            android:layout_height="30dp"></View>


        <TextView
            android:textColor="#303030"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"

            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:text="STAUS"/>

    </LinearLayout>


    <LinearLayout

        android:id="@+id/linerText"
        android:background="#E9E6E5"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:id="@+id/text_slno"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:paddingLeft="20dp"
            android:fontFamily="sans-serif"
            android:layout_height="match_parent"
            android:text="1"/>

        <View
            android:background="#F2F0F0"
            android:layout_width="0dp"
            android:layout_weight="0.02"
            android:layout_height="30dp"></View>

        <TextView
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginTop="5dp"
            android:id="@+id/text_empname"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:textSize="12dp"
            android:text="Naroj Kumar"/>

        <View
            android:background="#F2F0F0"
            android:layout_width="0dp"
            android:layout_weight="0.02"
            android:layout_height="30dp"></View>

        <TextView
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/text_status"
            android:singleLine="true"
            android:textSize="12dp"
            android:paddingLeft="28dp"
            android:fontFamily="sans-serif"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:text="OK"/>


    </LinearLayout>


</LinearLayout>