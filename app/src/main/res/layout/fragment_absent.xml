        <!--android:id="@+id/list_absence"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:layout_marginRight="6dp"-->
        <!--android:layout_marginTop="0dp"-->
        <!--android:layout_width="match_parent"-->
