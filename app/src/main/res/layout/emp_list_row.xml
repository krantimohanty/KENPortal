<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/layoutClick"
                android:longClickable="true">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:background="@color/common_action_bar_splitter"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/emp_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Pradipta Sutar"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/emp_designation"
                        android:layout_width="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emp_title"
                        android:ellipsize="end"
                        android:paddingTop="4dp"
                        android:text="Project Manager (BSS)xxxxxxxx"
                        android:textAppearance="?android:attr/textAppearance" />

                    <TextView
                        android:id="@+id/emp_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emp_designation"
                        android:drawablePadding="10dp"
                        android:paddingTop="5dp"
                        android:text="On Tour"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/emp_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="{md-more-vert}"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>