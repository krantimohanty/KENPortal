<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagebg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/textview_cover_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/common_action_bar_splitter"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/emp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:fontFamily="san-serif"
                    android:singleLine="true"
                    android:text="Pradipta Sutar"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/emp_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emp_title"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:fontFamily="san-serif"
                    android:text="Project Manager (BSS)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/emp_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emp_designation"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:text="Bhubaneswar"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="{fa-check-circle}"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
