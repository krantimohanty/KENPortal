<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/list_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circular_pink_button"
            android:gravity="center"
            android:text="{ic-empdir}"
            android:textColor="@color/text_selector"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_icon"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lines="2"
            android:text="Employee Directry"
            android:textColor="@color/text_selector"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num_of_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_icon"
            android:layout_alignTop="@id/list_icon"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/circular_pink_button_pressed"
            android:gravity="center"
            android:minHeight="20dp"
            android:minWidth="20sp"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="@null"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>