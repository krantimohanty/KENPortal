<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General">
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="example_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pin_lock"
            android:summary="Enable pin lock to lock the application."
            android:title="Enable pin lock" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="fb_permission"
            android:summary="Enable facebook connection integration"
            android:title="Facebook integration" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="example_switch"
            android:summary="Enable to auto sync or disable to manual sync"
            android:title="Synchronise data" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Notification">
        <SwitchPreference
            android:defaultValue="true"
            android:key="example_switch"
            android:title="Enable Notification" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="example_switch"
            android:title="Notification sound" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="example_switch"
            android:title="Vibration" />

    </PreferenceCategory>
   <!-- <Preference
        android:key="about_app"
        android:summary="@string/app_version"
        android:title="About App" />-->
</PreferenceScreen>